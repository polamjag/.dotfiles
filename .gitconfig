[include]
  path = .gitconfig.local
[core]
  editor = vim
  pager = less --raw
[color]
  ui = true
[help]
  autocorrect = 1
[alias]
  st  = status
  ps  = push
  pso = push origin
  pl  = pull
  br  = branch
  bra = branch -a
  brc = checkout -b
  cho = checkout
  a   = add
  cm  = commit
  cam = commit -a --amend
  lp  = log -p
  ld  = log --graph --decorate --oneline
  lds = log --graph --decorate --oneline --stat
  ldp = log --graph --decorate --oneline --stat -p
  df  = diff
  dfm = diff master
  dfw = diff --color-words
  dfc = diff --cached
  dfs = diff --staged
  gr  = grep -np
  submo-upgrade = submodule foreach 'git pull origin master'
[push]
	default = matching
[ghq]
  root = ~/src
