#!/bin/bash

ipaddr_site="http://ipecho.net/plain"

if [ -x `which curl` ] ; then
  curl $ipaddr_site 
  echo
elif [ -x `which wget` ] ; then
  wget -O - $ipaddr_site | grep -ow "^[0-9]\{1,3\}\.[0-9]\{1,3\}\.[0-9]\{1,3\}\.[0-9]\{1,3\}"
else
  echo 'There are no command to GET from console such as curl and wget.'
  exit 1
fi

